<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#448AFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_home"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Home"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_design"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:background="#0D47A1"
            android:text="Design"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_contactus"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:background="#448AFF"
            android:text="Contact Us"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text=" Ωράριο Καταστήματος:"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:text="Δευτέρα:\nΤρίτη:\nΤετάρτη:\nΠέμπτη:\nΠαρασκευή:\nΣάββατο:\nΚυριακή:"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:text="08:30 - 19:00\n08:30 - 19:00\n08:30 - 19:00\n08:30 - 19:00\n08:30 - 19:00\n09:00 - 14:00\nCLOSED"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/contact_us_image" />
    </LinearLayout>

</RelativeLayout>
